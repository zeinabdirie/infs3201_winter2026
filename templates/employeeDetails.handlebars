<h1>{{employee.name}} ({{employee.employeeId}})</h1>
<p>Phone: {{employee.phone}}</p>
<a href="/editEmployee?empId={{employee.employeeId}}">Edit Details</a>

{{#if shifts}}
<h2>Shifts</h2>
<table border="1">
    <tr>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
    </tr>
    {{#each shifts}}
    <tr class="{{#if isMorning}}morning{{/if}}">
        <td>{{date}}</td>
        <td>{{startTime}}</td>
        <td>{{endTime}}</td>
    </tr>
    {{/each}}
</table>
{{else}}
<h3>No shifts</h3>
{{/if}}

<style>
.morning {
    background-color: yellow;
}
</style>